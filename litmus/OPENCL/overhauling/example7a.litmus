C example7a

(*
 * https://multicore.doc.ic.ac.uk/overhauling/examples/example7a.litmus
 *)

{
[x] = 0;
[y] = 0;
}

P0@wg 0, dev 0 (global int* x, global int* y) {
  if (*x == 1) {
    *y = 1;
  }
}

P1@wg 0, dev 0 (global int* x, local atomic_int* y) {
  if (*y == 1) {
     *x = 1;
  }
}

exists (x = 1 /\ y = 1)